---
import CommonImage from '@components/CommonImage.astro';
import SocialIcons from '@components/SocialIcons.astro';
import MainLayout from '@layouts/MainLayout.astro';
import data from '@schemas/about-data.json';
import socialIcons from '@schemas/social-icons.json';
---

<MainLayout title={data.title} description={data.description}>
   <section class="container" aria-label="Sobre Mi">
      <div class="content">
         <div class="image-container">
            <CommonImage
               src={data.avatar.src}
               alt={data.avatar.alt}
               width="200"
               height="200"
               quality={80}
               classes="hero-image"
            />
         </div>
         <div class="text-container">
            <h1>Sobre Mí</h1>
            <span>
               <!-- eslint-disable max-len -->
               <p>Soy un desarrollador Full Stack especializado en JavaScript, HTML, CSS y Node.js</p>
               <p>También tengo experiencia en Python y he trabajado con tecnologías como React, React Native, Blockchain, WEB3, dApps y smart contracts.</p>
               <p>¡Explora mi blog para obtener información y consejos sobre estos temas y más!</p>
            </span>
         </div>
      </div>
      <SocialIcons data={socialIcons} classes="social-icons" />
   </section>
</MainLayout>

<style>
   .container {
      display: flex;
      flex-direction: column;
      align-items: center;
   }

   .content {
      display: flex;
      flex-direction: row;
      align-items: flex-start;
      justify-content: center;
      flex-wrap: wrap;
   }

   .image-container {
      margin-right: 20px;
   }

   .text-container {
      flex: 1;
   }

   .hero-image {
      border-radius: 10px;
      width: 200px;
      height: 200px;
      box-shadow: var(--shadow-md);
   }

   h1 {
      text-align: center;
      margin-bottom: 10px;
   }

   p {
      text-align: center;
   }
</style>
