---
import Breadcrumbs from '@components/breadcrumbs/Breadcrumbs.astro';
import DemoLinks from '@layouts/demos/DemoLinks.astro';
import DemosLayout from '@layouts/demos/DemosLayout.astro';

const paths = import.meta.glob('../random/*.astro');
---
<DemosLayout title="Astro Components Demo">
   <Breadcrumbs
      slot='breadcrumb'
      links={[
         { name: 'Demos', path: '/demos' },
         { name: 'Random Demos', path: '/demos/random', linkIsActive: 'is-active' }
      ]}
   />
   <DemoLinks {paths} routeName="random" />
</DemosLayout>

