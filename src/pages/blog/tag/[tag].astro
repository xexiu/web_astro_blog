---
import TagHeading from '@components/TagHeading.astro';
import { PostCard } from '@components/postcard';
import { slugify } from '@js/utils';
import MainLayout from '@layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import type { Post } from 'types/utils';

export async function getStaticPaths() {
   const blogEntries = await getCollection('blog');
   const blogTags = blogEntries.flatMap((entry: any) => entry.data.tags);

   return blogTags.map((tag: string) => ({
      params: { tag: slugify(tag) }, props: { blogEntries },
   }));
}

const { tag } = Astro.params;
const { blogEntries } = Astro.props;
const tagPosts = blogEntries.filter((entry: Post) => entry.data.tags.includes(tag as string));
---

<MainLayout title={tag}>
   <section class="container" aria-label={`Posts about ${tag}`}>
      <span>Publicaciones etiquetadas con:</span>
      <TagHeading classes="post-tags" tag="h1">{tag}</TagHeading>
      <div class="post-container">
         {
            tagPosts.map((post: Post) => (
               <PostCard
                  {post}
               />
            ))
         }
      </div>
   </section>
</MainLayout>

<style>
   .post-tags {
      margin-bottom: 10px;
   }
</style>