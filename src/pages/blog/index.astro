---
import PostCard from '@components/PostCard.astro';
import { formatBlogPosts } from '@js/utils';
import MainLayout from '@layouts/MainLayout.astro';
import data from '@schemas/blogPage.json';
import type { Post } from 'types/utils';
const allPosts = await Astro.glob('./*.mdx');
const formattedPosts = formatBlogPosts(allPosts as []);
---

<MainLayout title={data.title} description={data.description}>
   <p>Blog</p>
   <section class="container" aria-label="New Blog Posts">
      <h1 class="h1">New Blog Posts</h1>
      <div class="post-container">
         {
            formattedPosts.map((post: Post) => (
               <PostCard
                  frontmatter={post.frontmatter}
                  url={post.url}
                  tagType="h2"
               />
            ))
         }
      </div>
   </section>
</MainLayout>