---
import Link from '@components/common/link/Link.astro';
import { slugify } from '@js/utils';

interface Props {
    tag: string;
    classes?: string;
}
const { tag, classes = '', ...rest } = Astro.props;
---

<Link
   text={tag}
   href={`/blog/tag/${slugify(tag)}/`}
   borderVisible={true}
   isFilled={false}
   classes={`${classes} tag`}
   {...rest}
/>

<style>
    .tag {
        color: var(--color-red);
        border: 2px solid #999;
        border-radius: 2em;
        display: inline-flex;
        margin: 0;
        padding: 0.1em 0.6em;
        text-decoration: none;
        text-transform: uppercase;
        font-size: var(--fs-4sm);
        margin: 5px 2px;
        position: relative;
        &:hover {
            background: linear-gradient(to right, #ff8a00, #da1b60);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    }
</style>
