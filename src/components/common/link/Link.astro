---
import type { LinkProps } from 'types/interfaces';
import ExternalLink from './ExternalLink.astro';
import InternalLink from './InternalLink.astro';

const {
   text,
   href,
   customStyle,
   icon,
   isFilled = true,
   borderVisible = false,
   isExternalLink = false,
   classes = 'link',
   ...rest
} = Astro.props as LinkProps;

---

{
   isExternalLink ? (
      <ExternalLink
         {href}
         {text}
         {icon}
         classes={`${classes} external-link`}
         {customStyle}
         {isFilled}
         {borderVisible}
         {...rest}
      >
         <slot />
      </ExternalLink>
   ) : (
      <InternalLink
         {href}
         {text}
         {icon}
         classes={`${classes} internal-link`}
         {customStyle}
         {isFilled}
         {borderVisible}
         {...rest}
      >
         <slot />
      </InternalLink>
   )
}
