---
interface Props {
  text?: string;
  classes?: string;
  title?: string;
}
const { text, title = 'Bot√≥n', classes = '', ...rest } = Astro.props;
---

<button
   {...rest}
   aria-label={title}
   type="button"
   class:list={['btn-clean', classes]}
>
   <slot name="button-before-text" />
   {text}
   <slot name="button-after-text" />
</button>
