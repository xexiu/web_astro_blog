---
import { Link } from '../common/link';
import './breadcrumbs.css';

type Link = {
   name: string;
   path: string;
   linkIsActive?: string;
}

interface Props {
    links: Link[];
}

const { links }: Props = Astro.props;

---

<nav class="breadcrumbs" aria-label="Breadcrumb" vocab="https://schema.org/" typeof="BreadcrumbList">
   <ul>
      {
         links.map((link: Link, index: number) => {
            return (
               <li>
                  <Link
                     text={link.name}
                     href={link.path}
                     isFilled={false}
                     data-sidebarLink
                     aria-label={link.name}
                     classes={`breadcrumbs__item ${link.linkIsActive ? link.linkIsActive : ''}`}
                  />
                  <meta property="position" content={String(index + 1)}>
               </li>
            );
         })
      }
   </ul>
</nav>
