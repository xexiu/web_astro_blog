---
import { formatDate, readingTime } from '@js/utils';
import type { Post } from 'types/utils';

interface Props {
   post: Post;
}

const { post }: Props = Astro.props;
const { time } = readingTime(post.body);
---

<span class="reading-time"
>Lectura de {time} min - {formatDate(post.data.date.toString())}</span
>

<style>
   .reading-time {
      color: var(--color-lighter-grey);
      font-size: var(--fs-3sm);
   }
</style>
