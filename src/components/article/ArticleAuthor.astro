---
import { slugify } from '@js/utils';
import type { Post } from 'types/utils';

interface Props {
   post: Post;
}
const { post } = Astro.props;
---

<span class="author"
   itemprop="author"><a data-normal-link href={`/blog/author/${slugify(post.data.author)}/`}
   >{post.data.author}</a
   ></span
>

<style>
   .author a {
      color: #f2f2f2;
   }
</style>
