---
import PostCard from '@components/postcard/PostCard.astro';
import type { Post } from 'types/utils';

interface Props {
   entries: Post[],
   classes?: string;
}

const { entries, classes, ...rest } = Astro.props;
---

<div class:list={['posts-container', classes]} {...rest}>
   {entries.map((post) => <PostCard {post} />)}
</div>

<style>
   .posts-container {
      display: flex;
      align-items: flex-start;
      flex-direction: column;
      gap: var(--size-fluid-3);
      width: 100%;
      margin-bottom: 10px;
   }
</style>
