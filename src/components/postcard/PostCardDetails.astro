---
import { Link } from '@components/common/link';
import { formatDate, slugify } from '@js/utils';

interface Props {
    author: string;
    date: string;
}

const { author, date } = Astro.props;
---

<div class="post-card-details">
   <div class="post-card-author" title={author} aria-label={author}>
      <Link
         text={author}
         href={`/blog/author/${slugify(author)}/`}
         isFilled={false}
         aria-label={author}
      />
   </div>
   <span class="post-card-date" title={formatDate(date)} aria-label={formatDate(date)}>
      {formatDate(date)}
   </span>
</div>

<style>
    .post-card-details {
        position: relative;
        display: flex;
        gap: 10px;
        align-items: flex-end;
        max-width: 100%;

        .post-card-date {
            font-size: 14px;
            color: var(--color-darken-grey);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .post-card-author {
            font-size: 15px;
            margin-top: 5px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            a {
                text-decoration: none;
                color: var(--color-darken-grey);
                border-bottom: 1px solid #ccc;
                &:hover {
                    border-bottom: 2px solid black;
                }
            }
        }
    }
</style>
