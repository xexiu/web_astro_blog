---
interface Props {
   href: string;
   text: string;
}
const { href, text = 'No Category', ...rest } = Astro.props as Props;
---

<a href={href} class="post-card-link-cat" {...rest}>{text}</a>

<style>
   .post-card-link-cat {
      background: var(--color-red);
      border: 0;
      color: white;
      font-size: var(--fs-sm);
      padding: 2px 10px;
      text-shadow: 0 -1px 0 rgb(0 0 0 / 30%);
      border-bottom-right-radius: 3px;
      text-decoration: none;
      position: absolute;
      top: 0;
      left: 0;
      text-transform: capitalize;

      &:hover {
         cursor: pointer;
         box-shadow: var(--shadow-md);
      }

      &:focus {
         box-shadow: inset 1px 1px 10px rgb(0 0 0 / 30%);
      }
   }
</style>
