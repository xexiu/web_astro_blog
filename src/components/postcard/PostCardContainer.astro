---
interface Props {
	classes?: string;
}

const { classes, ...rest } = Astro.props as Props;
---

<article class:list={['post-card-container', classes]} {...rest}>
   <slot />
</article>

<style>
	.post-card-container {
		position: relative;
		background-color: #fff;
		display: flex;
		align-items: flex-start;
		position: relative;
		border-radius: 4px;
		padding: 10px;
		border: 1px solid #ccc;
		box-shadow: inset 0 0 0 1px hsla(0, 0%, 100%, 0.1);
		list-style: none;
		transition: all .2s;
		width: 100%;
		&:hover {
			box-shadow: 0 10px 42px rgba(25, 17, 34, 0.1);
			text-decoration: none;
			-webkit-transform: translateY(-4px);
			transform: translateY(-4px);
			transition: all .2s;
		}
	}
	@media screen and (width <= 650px) {
		.post-card-container {
			flex-direction: column;
		}
	}
</style>
