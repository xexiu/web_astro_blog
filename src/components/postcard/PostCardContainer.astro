---
interface Props {
	classes?: string;
}

const { classes, ...rest } = Astro.props as Props;
---

<article class:list={['post-card-container', classes]} {...rest}>
   <slot />
</article>

<style>
	.post-card-container.featured_post {
		&::after {
			content: "DESTACADO";
			position: absolute;
			right: 2px;
			top: 2px;
			font-weight: bold;
			font-size: var(--fs-4sm);
			color: var(--color-red);
			text-decoration: underline wavy;
		}
	}
	.post-card-container {
		position: relative;
		background-color: #fff;
		display: flex;
		align-items: flex-start;
		position: relative;
		border-radius: 4px;
		padding: 10px;
		border: 1px solid #ccc;
		box-shadow: inset 0 0 0 1px hsla(0, 0%, 100%, 0.1);
		list-style: none;
		transition: all 0.2s;
		width: 100%;
		flex-direction: column;
		&:hover {
			box-shadow: 0 10px 42px rgba(25, 17, 34, 0.1);
			text-decoration: none;
			-webkit-transform: translateY(-4px);
			transform: translateY(-4px);
			transition: all 0.2s;
		}
	}
	.featured_post {
		border-top: 2px solid rgb(228, 235, 13);
		box-shadow: 0 10px 42px rgba(25, 17, 34, 0.1);
	}
</style>
