---
interface Props {
	classes?: string;
}

const { classes, ...rest } = Astro.props as Props;
---

<article class:list={['post-card-container', classes]} {...rest}>
   <slot />
</article>

<style is:global>
	.post-card-container {
		position: relative;
		background-color: blanchedalmond;
		background-image: none;
		background-position: 100%;
		background-size: 400%;
		border-radius: 7px;
		border: 1px solid #ccc;
		box-shadow: inset 0 0 0 1px hsla(0, 0%, 100%, 0.1);
		list-style: none;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		height: 520px;
		transition: all 0.4s;
		&:hover {
			box-shadow: var(--shadow-md);
			transform: scale(0.98);
			transition: all 0.4s;
			border: 1px solid #666;
		}
	}
</style>
