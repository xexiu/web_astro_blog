---
interface Props {
	classes?: string;
}

const { classes, ...rest } = Astro.props as Props;
---

<article class:list={['post-card', classes]} {...rest}>
   <slot />
</article>

<style is:global>
	.post-card {
		position: relative;
		background-color: blanchedalmond;
		background-image: none;
		background-position: 100%;
		background-size: 400%;
		border-radius: 7px;
		border: 1px solid #ccc;
		box-shadow: inset 0 0 0 1px hsla(0, 0%, 100%, 0.1);
		list-style: none;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		height: 550px;
	}
	.dark {
		.post-card {
			background-color: #222;
		}
	}
</style>
