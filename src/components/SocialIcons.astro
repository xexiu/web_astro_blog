---
import Link from '@components/common/Link.astro';
const{ data, classes } = Astro.props;
---

<div class={classes}>
   {
      data.map((social: object) => {
         return Object.keys(social as []).map((s: string) => (
            <Link
               icon={{
                  name: social[s].iconName,
                  side: 'left',
                  width: '22',
                  height: '22',
               }}
               text=""
               href={social[s].path}
               style="primary"
               isFilled={false}
               target="_blank"
               alt={social[s].iconName}
               aria-label={social[s].iconName}
            />
         ));
      })
   }
</div>

<style>
   .social-icons {
      display: flex;
      justify-content: center;
      margin: 20px 0;
   }

   .social-icons a {
      margin: 0 10px;
      color: black;
   }
</style>