---
import { Image } from 'astro:assets';
interface Props {
    src: string | any;
    width?: number | `${number}` | undefined;
    height?: number | `${number}` | undefined;
    alt: string;
    classes?: string;
    quality?: number;
    loading?: 'lazy' | 'eager';
    srcset?: string;
}

const {
   src,
   width = '400',
   height = '400',
   alt = 'Image',
   classes,
   ...rest
} = Astro.props;
---

<Image
    {src}
    {width}
    {height}
    {alt}
    class:list={['image', classes]}
    onerror="this.onerror=null;this.src='https://xexiu.dev/assets/images/broken-image-min.jpeg';"
    {...rest}
/>
