---
// component imports
import Link from './common/link/Link.astro';

const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog pages">
   {
      prevUrl && (
         <Link
            text="Previous"
            href={prevUrl}
            borderVisible={true}
            isFilled={false}
            icon={{
               name: 'tabler:arrow-big-left-line',
               side: 'left',
               width: '22',
               height: '22'
            }}
         />
      )
   }
   {
      nextUrl && (
         <Link
            text="Next"
            href={nextUrl}
            borderVisible={true}
            isFilled={false}
            icon={{
               name: 'tabler:arrow-big-right-line',
               side: 'right',
               width: '22',
               height: '22'
            }}
         />
      )
   }
</nav>