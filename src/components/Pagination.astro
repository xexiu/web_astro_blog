---
// component imports
import Link from './common/link/Link.astro';

const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog pages" class="pagination-nav">
   {
      prevUrl && (
         <Link
            text="Anterior"
            href={prevUrl}
            icon={{
               name: 'tabler:arrow-big-left-line',
               side: 'left',
               width: '22',
               height: '22'
            }}
         />
      )
   }
   {
      nextUrl && (
         <Link
            text="Siguiente"
            href={nextUrl}
            icon={{
               name: 'tabler:arrow-big-right-line',
               side: 'right',
               width: '22',
               height: '22'
            }}
         />
      )
   }
</nav>

<style>
   .pagination-nav {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 55px;
      a {
         text-decoration: none;
         color: #222;
         display: flex;
         gap: 5px;
      }
   }
</style>
