---
import { Link } from '@components/common/link';

interface Props {
    linkUrl: string;
    title: string;
}

const { linkUrl, title } = Astro.props;
---

<!--
         https://www.facebook.com/sharer.php?u=LINKref=social-share
         https://twitter.com/intent/tweet?url=https://www.example.com/page&text=Check%20out%20this%20awesome%20page?ref=social-share
         https://www.reddit.com/submit?url=[URL]&title=[Title]
         https://www.linkedin.com/shareArticle?mini=true&url=[URL]&title=[Title]&summary=[Summary]&source=[Source]
         https://api.whatsapp.com/send?text=[Your message] [URL]
         https://t.me/share/url?url=[URL]&text=[Your message]
      -->

<div class="share__modal__options" slot="social-options">
   <ul class="list">
      <li class="list__item">
         <Link
            icon={{
               name: 'brandico:twitter',
               side: 'left',
               width: '22',
               height: '22',
            }}
            href={`https://twitter.com/intent/tweet?url=${linkUrl}&text=${encodeURIComponent(title)}?ref=social-share-xexiu`}
            alt="Share on Twitter (X)"
            isFilled={false}
            aria-label="Share on Twitter (X)"
            data-icon="twitter"
            isExternalLink={false}
            target="_blank"
         />
      </li>
   </ul>
</div>

<style>
    .share__modal__options {
      margin-top: 10px;
   }
   .list {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      row-gap: 1.5em;
      column-gap: 1em;
      padding: 0;
      margin: 0;
   }
   .list__item {
      display: flex;
      flex-direction: column;
      row-gap: 0.5em;
      align-items: center;
      justify-content: center;
      font-weight: 500;
      opacity: 0.9;
      cursor: pointer;
      border: 1px solid #ddd;
      border-radius: 50%;
      height: 44px;
      width: 44px;
      color: #222;
      &:hover {
         border: 1px solid #666;
      }
      a {
         display: flex;
         width: 100%;
         height: 100%;
         align-items: center;
         justify-content: center;
         text-decoration: none;
         padding: 10px 0;
         color: #222;
      }
   }
</style>