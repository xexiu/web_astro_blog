---
import CopyClipboard from '@components/common/CopyClipboard.astro';

interface Props {
    text: string;
}

const { text } = Astro.props;
---

<xe-copy-clipboard-social data-text={text}>
   <div class="social-footer" id="main-social-footer">
      <div>{text}</div>
      <CopyClipboard
         disableTooltip
         icon={{
            width: '22',
            height: '22',
         }}
      />
   </div>
</xe-copy-clipboard-social>

<style>
    .social-footer {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 12px 0 -5px 0;
        height: 45px;
        border-radius: 4px;
        padding: 0 5px;
        border: 1px solid #757171;

        .copy-input {
            width: 100%;
            height: 100%;
            border: none;
            outline: none;
            font-size: 15px;
        }
    }
</style>

<script>
    import { SocialShareCopyCode } from '@js/custom-elements';

    customElements.define('xe-copy-clipboard-social', SocialShareCopyCode);
</script>

<style is:inline>
    .social-footer .copy-clipboard-code {
        border: 0;
        border-radius: none;
        position: relative;
        color: #222;
        margin: 0;
        padding: 0 5px;
        cursor: pointer;
        height: 100%;
    }
    #main-social-footer .feedback-icon {
        width: 30px;
    }
</style>
