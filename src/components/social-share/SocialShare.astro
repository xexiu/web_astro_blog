const { slotTitle, slotMain, slotFooter, linkUrl, title } = Astro.props;
---

<!--
         https://www.facebook.com/sharer.php?u=LINKref=social-share
         https://twitter.com/intent/tweet?url=https://www.example.com/page&text=Check%20out%20this%20awesome%20page?ref=social-share
         https://www.reddit.com/submit?url=[URL]&title=[Title]
         https://www.linkedin.com/shareArticle?mini=true&url=[URL]&title=[Title]&summary=[Summary]&source=[Source]
         https://api.whatsapp.com/send?text=[Your message] [URL]
         https://t.me/share/url?url=[URL]&text=[Your message]
      -->
<section>
   <slot name="social-options" />
   <div slot="footer" class="field">
      <i class="url-icon uil uil-link"></i>
      <input type="text" readonly="" value="test" />
      <button class="btn-blue">Copiar</button>
   </div>
</section>

<script>
   const copy = document.querySelector('.field button') as HTMLButtonElement;
   const input = document.querySelector('.field input') as HTMLInputElement;

   copy?.addEventListener('click', async () => {
      input.select();
      input.setSelectionRange(0, 99999); // For mobile devices
      await navigator.clipboard.writeText(input.value);
      copy.innerText = 'Copiado';
   });
</script>

<style>
   .field {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin: 12px 0 -5px 0;
      height: 45px;
      border-radius: 4px;
      padding: 0 5px;
      border: 1px solid #757171;
      input {
         width: 100%;
         height: 100%;
         border: none;
         outline: none;
         font-size: 15px;
      }
   }
</style>
