---
import Link from '@components/Link.astro';
---

<footer>
   <div>
      <small>
         Copyright &copy; <span id="copyright"></span> | All rights reserved
      </small>
      <small>
         <Link
            href="/rss.xml"
            text="Subscribe to RSS"
            style="primary"
            icon={{
               name: 'tabler:rss',
               side: 'right',
               width: '16',
               height: '16',
            }}
            data-normal-link
         />
      </small>
   </div>
</footer>

<script>
   const element = document.querySelector('#copyright');

   if (element !== null) {
      element.textContent = new Date().getFullYear().toString();
   }
</script>

<style>
   :where(footer) {
      width: 100%;
      padding: var(--space-sm);
      padding-left: 100px;
      font-size: var(--fs-sm);

      & div {
         display: flex;
         justify-content: space-between; /* Add this line */
         align-items: center; /* Add this line */
         max-width: 1500px;
         margin-inline: auto;
         gap: var(--space-sm);
      }

      & a {
         display: flex;
         align-items: center;
         gap: 5px;
         text-decoration: none;
      }
   }
</style>
